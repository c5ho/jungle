<section class="admin-dashboard-show">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="panel panel-default products">
    <h4>Total Products: <%= @products.count%></h4>
    <%= link_to 'See all Products', [:admin, :products] %>
    <br>
      <% @products.each { |product| %>
        <%= product.name%>, 
      <% }%>
    <br>
    <br>
    <h4>Total Categories: <%= @categories.count%> </h4>
    <%= link_to 'See all Categories', [:admin, :categories] %>
    <br>
      <% @categories.each { |category| %>
        <%= category.name%>, 
      <% }%>
    <br>
  </div>

</section>

