<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <%= image_tag @product.image.url, class: 'main-img' %>
    <div>
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <% if @product.soldout? %>
        <div class="quantity">
          <button type="button" class="soldout">Sold Out</button>
        </div>
      <% else %>
        <div class="quantity">
          <span><%= @product.quantity %> in stock at </span>
          <% if active_sale? %>
            <span class="text-decoration-line-through"><%= humanized_money_with_symbol @product.price %></span>
            <span class="text-danger"><%= humanized_money_with_symbol @sale_price %></span>
          <% else %>
            <span><%= humanized_money_with_symbol @product.price %></span>
          <% end %>
        </div>
        <div class="price">          
          <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn' , method: :post do %>
            <%= fa_icon "shopping-cart", text: 'Add' %>
          <% end %>          
        </div>
      <% end %>
    </div>
  </article>
</section>
