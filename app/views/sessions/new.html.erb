<header class="page-header">
  <h1>Log In</h1>
</header>

<%= form_for :login do |f| %>

  <div class="card" style="width: 36rem;">
    <div class="card-body">
      
      <div class="mb-3">
        <%= f.label :email, { class: "form-label"}  %>
        <%= f.text_field :email, { class: "form-control", placeholder: "Enter your registered email", autofocus: "true" } %>
      </div>
      
      <div class="mb-3">
        <%= f.label :password, { class: "form-label"} %>
        <%= f.password_field :password, { class: "form-control", placeholder: "Enter your password" }  %>
      </div>
      
      <%= f.submit "Log In" %>
      
    </div>
  </div>
<% end %>