<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.description %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on%>
  </td>
  <td>
    <% if sale.ends_on < Date.current %>
      <span class="label danger">Finished</span>
    <% elsif sale.starts_on > Date.current %>
      <span class="label warning">Upcoming</span>
    <% else %>
      <span class="label success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
</tr>